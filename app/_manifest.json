{
  "manifest_version": 2,
  "name": "My App",
  "version": "0.0.0",
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [{
    "matches": ["https://*.example.com/*"],
    "js": [
      "content/js/vendors.js",
      "content/js/app.js"
    ]
  }],
  "background": {
    "scripts": [
      "background/js/vendors.js",
      "background/js/app.js"
    ],
    "persistent": true
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_popup": "browser-action.html"
  }
}